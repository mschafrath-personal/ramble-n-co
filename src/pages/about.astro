---
import Layout from "../layouts/Layout.astro";

const brand = "Ramble & Co.";
---

<Layout title={`About — ${brand}`} brand={brand}>
  <section class="section about">
    <div class="about-grid">
      <div class="copy">
        <h1>About</h1>

        <p>
          Ramble & Co. is a creative consulting practice focused on designing workflows that help teams
          think clearly and execute with confidence.
        </p>

        <p>
          Led by
          <a
            href="https://www.linkedin.com/in/mary-schafrath-nyc/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-link"
          >
            Mary Schafrath
          </a>,
          the work blends a foundation in visual design with deep experience in
          UX design operations, systems thinking, and cross-functional enablement. The focus is not just
          on what teams build, but on the structures that support good decisions along the way.
        </p>

        <p>
          Typical engagements include early problem framing, UX and content structure, and operational
          tooling such as workflows, templates, and internal systems. The goal is simple: reduce noise,
          create alignment, and make progress feel calmer.
        </p>

        <!-- Resume download -->
        <p class="resume">
          <a
            href="https://www.dropbox.com/scl/fi/cojac27pvnxxmo4ywgyux/mary-schafrath-resume-2026.pdf?rlkey=4yppbyjfw67knipt1m0isnx2y&dl=0"
            target="_blank"
            rel="noopener noreferrer"
          >
            Download resume
          </a>
        </p>
      </div>

      <figure class="portrait" aria-label="Portrait of Mary Schafrath">
        <img
          src="/profile-image-mschafrath.png"
          alt="Mary Schafrath"
          loading="lazy"
          decoding="async"
        />
        <figcaption class="photo-credit">
          Photo:
          <a
            href="https://www.instagram.com/voxavila/"
            target="_blank"
            rel="noopener noreferrer"
            class="photo-credit-link"
          >
            David Avila
          </a>
        </figcaption>
      </figure>
    </div>
  </section>
</Layout>

<style>
  /* --- Grid --- */
  .about-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 280px;
    gap: 30px;
    align-items: start;
  }

  .copy {
    max-width: 760px;
  }

  /* Copy styling */
  .copy p {
    line-height: 1.75;
    font-size: 16px;
    color: var(--accent);
  }

  /* Inline link (LinkedIn name) — match "Download resume" underline thickness */
  .inline-link {
    color: var(--accent);
    text-decoration: none;
    font-weight: inherit;
    border-bottom: 1px solid rgba(205, 117, 9, 0.6);
    padding-bottom: 2px;
  }

  .inline-link:visited {
    color: var(--accent);
  }

  .inline-link:hover {
    border-bottom-color: rgba(205, 117, 9, 1);
  }

  /* Resume link */
  .resume {
    margin-top: 20px;
    font-size: 16px;
  }

  .resume a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    border-bottom: 1px solid rgba(205, 117, 9, 0.6);
    padding-bottom: 2px;
  }

  .resume a:visited {
    color: var(--accent);
  }

  .resume a:hover {
    border-bottom-color: rgba(205, 117, 9, 1);
  }

  /* --- Portrait --- */
  .portrait {
    margin: 0;
    padding-top: 28px;
  }

  .portrait img {
    width: 240px;
    height: auto;
    display: block;
  }

  /* Photo credit — match footer style, link underline matches "Download resume" */
  .photo-credit {
    margin-top: 10px;
    font-size: 14px; /* footer-sized */
    color: var(--accent);
  }

  .photo-credit-link {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px solid rgba(205, 117, 9, 0.6);
    padding-bottom: 2px;
  }

  .photo-credit-link:visited {
    color: var(--accent);
  }

  .photo-credit-link:hover {
    border-bottom-color: rgba(205, 117, 9, 1);
  }

  /* --- Mobile --- */
  @media (max-width: 860px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .portrait {
      padding-top: 18px;
    }

    .portrait img {
      width: 220px;
    }
  }
</style>
