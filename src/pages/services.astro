---
import Layout from "../layouts/Layout.astro";

const brand = "Ramble & Co.";

const services = [
  {
    title: "Strategy",
    items: [
      "Problem framing",
      "Prioritization + roadmaps",
      "Stakeholder alignment",
    ],
  },
  {
    title: "Design",
    items: [
      "UX flows + IA",
      "UI direction + systems",
      "Content structure + clarity",
    ],
  },
  {
    title: "Operations",
    items: [
      "Workflow design",
      "Templates + documentation",
      "Tooling + enablement",
    ],
  },
];
---

<Layout title={`Services â€” ${brand}`} brand={brand}>
  <section class="section content">
    <h1>Services</h1>

    <p class="lede">
      Engagements are lightweight, pragmatic, and tailored. You can bring a
      specific problem, or we can scope together.
    </p>

    <div class="grid">
      {services.map((s) => (
        <article class="card">
          <h2>{s.title}</h2>
          <ul>
            {s.items.map((i) => (
              <li>{i}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  .content {
    max-width: 900px;
  }

  .lede {
    max-width: 760px;
    margin: 0 0 28px;
    font-size: 16px;
    line-height: 1.75;
    color: rgba(160, 55, 10, 1);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 22px;
  }

  .card {
    padding-top: 14px;
  }

  .card h2 {
    margin: 0 0 10px;
    font-size: 15px;
    font-weight: 650;
    letter-spacing: -0.01em;
    color: rgba(0, 125, 106, 1);
  }

  ul {
    margin: 0;
    padding-left: 18px;
    font-size: 14px;
    line-height: 1.8;
    color: rgba(160, 55, 10, 1);
  }

  li {
    margin-bottom: 6px;
  }

  @media (max-width: 860px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
