---
const brand = "Ramble & Co.";

const services = [
  {
    title: "Strategy",
    items: ["Problem framing", "Prioritization + roadmaps", "Stakeholder alignment"],
  },
  {
    title: "Design",
    items: ["UX flows + IA", "UI direction + systems", "Content structure + clarity"],
  },
  {
    title: "Operations",
    items: ["Workflow design", "Templates + documentation", "Tooling + enablement"],
  },
];

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Services — {brand}</title>
  </head>

  <body>
    <main class="wrap">
      <header class="nav">
        <a class="logo" href={base}>{brand}</a>

        <nav class="links">
          <a href={`${base}about`}>About</a>
          <a href={`${base}services`}>Services</a>
          <a href={`${base}contact`}>Contact</a>
        </nav>
      </header>

      <section class="content">
        <h1>Services</h1>
        <p class="lede">
          Engagements are lightweight, pragmatic, and tailored. You can bring a
          specific problem, or we can scope together.
        </p>

        <div class="grid">
          {services.map((s) => (
            <article class="card">
              <h2>{s.title}</h2>
              <ul>
                {s.items.map((i) => (
                  <li>{i}</li>
                ))}
              </ul>
            </article>
          ))}
        </div>
      </section>

      <footer class="footer">
        <p>© {new Date().getFullYear()} {brand}</p>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    background: #0b0b0d;
    color: rgba(255, 255, 255, 0.92);
    font-family: ui-sans-serif, system-ui, -apple-system,
      BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial;
  }

  .wrap {
    max-width: 980px;
    margin: 0 auto;
    padding: 28px 20px 64px;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 16px;
    padding: 10px 0 26px;
  }

  .logo {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.92);
    font-weight: 650;
  }

  .links {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 14px;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
  }

  .links a:hover {
    color: rgba(255, 255, 255, 0.92);
    border-bottom-color: rgba(255, 255, 255, 0.25);
  }

  .content {
    padding: 46px 0 26px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  h1 {
    margin: 0 0 12px;
    font-size: 40px;
    letter-spacing: -0.03em;
  }

  .lede {
    max-width: 760px;
    line-height: 1.75;
    color: rgba(255, 255, 255, 0.72);
    font-size: 16px;
    margin: 0 0 22px;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 18px;
  }

  .card {
    padding-top: 10px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card h2 {
    margin: 0 0 10px;
    font-size: 15px;
  }

  ul {
    margin: 0;
    padding-left: 18px;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.8;
    font-size: 14px;
  }

  .footer {
    margin-top: 52px;
    padding-top: 18px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.56);
    font-size: 13px;
  }

  @media (max-width: 860px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
