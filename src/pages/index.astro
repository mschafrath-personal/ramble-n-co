---
import Layout from "../layouts/Layout.astro";

const brand = "Ramble & Co.";
const tagline = "Designing workflows for people.";
const subhead =
  "A small studio helping teams of people simplify messy systems, align stakeholders, and ship with confidence.";

const services = [
  { title: "Strategy", desc: "Problem framing, roadmaps, decision support." },
  { title: "Design", desc: "UX, UI, content structure, systems thinking." },
  { title: "Operations", desc: "Workflows, templates, tooling, enablement." },
];
---

<Layout title={brand} brand={brand}>
  <section class="section hero">
    <p class="kicker">Creative Consulting</p>
    <h1>{tagline}</h1>
    <p class="subhead">{subhead}</p>

    <div class="cta">
      <a class="button primary" href="/contact">Start a project</a>
      <a class="button ghost" href="/services">View services</a>
    </div>
  </section>

  <section class="section grid" aria-label="Services overview">
    {services.map((s) => (
      <article class="card">
        <h2>{s.title}</h2>
        <p>{s.desc}</p>
      </article>
    ))}
  </section>
</Layout>

<style>
  .hero {
    padding-bottom: 26px;
  }

  .kicker {
    margin: 0 0 14px;
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(188, 105, 8, 1);
  }

  .subhead {
    max-width: 720px;
    margin: 0 0 22px;
    font-size: 18px;
    line-height: 1.65;
    color: rgba(188, 105, 8, 1);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 18px;
  }

  .card {
    padding-top: 14px;
  }

  .card p {
    margin: 0;
    line-height: 1.55;
    font-size: 14px;
    color: rgba(205, 117, 9, 1);
  }

  @media (max-width: 860px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
