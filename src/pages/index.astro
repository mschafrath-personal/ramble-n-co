---
import Layout from "../layouts/Layout.astro";

const brand = "Ramble & Co.";
const tagline = "Designing workflows for creative people.";

const services = [
  { title: "Strategy", desc: "Problem framing, roadmaps, decision support." },
  { title: "Design", desc: "UX, UI, content structure, systems thinking." },
  { title: "Operations", desc: "Workflows, templates, tooling, enablement." },
];
---

<Layout title={brand} brand={brand}>
  <section class="section hero">
    <p class="kicker">Creative Consulting</p>
    <h1>{tagline}</h1>

    <div class="subhead">
      <p>
        Hi, I’m Mary — a creative consultant who helps teams untangle complex work by aligning strategy, design, and operations into practical workflow systems that actually get used.
      </p>

      <p>
        My background is in visual design, but my work lives at the intersection of how teams think, decide, and execute. From early problem framing to scalable workflows and enablement, I design the infrastructure that helps creative teams move faster with less friction.
      </p>
    </div>

    <div class="cta">
      <a class="button primary" href="/contact">Start a project</a>
      <a class="button ghost" href="/services">View services</a>
    </div>
  </section>

  <section class="section grid" aria-label="Services overview">
    {services.map((s) => (
      <article class="card">
        <h2>{s.title}</h2>
        <p>{s.desc}</p>
      </article>
    ))}
  </section>
</Layout>

<style>
  .hero {
    padding-bottom: 26px;
  }

  .kicker {
    margin: 0 0 14px;
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: #A0370A;
  }

  .subhead {
    max-width: 720px;
    margin: 0 0 22px;
    font-size: 18px;
    line-height: 1.65;
  }

  /* Override Layout's :global(p) color */
  .subhead p {
    margin: 0;
    color: #A0370A;
  }

  .subhead p + p {
    margin-top: 1rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 18px;
  }

  .card {
    padding-top: 14px;
  }

  .card p {
    margin: 0;
    line-height: 1.55;
    font-size: 14px;
    color: rgba(160, 55, 10, 1);
  }

  @media (max-width: 860px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
