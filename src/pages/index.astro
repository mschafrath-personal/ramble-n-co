---
const brand = "Ramble & Co.";
const tagline = "Strategy, design, and operational clarity.";
const subhead =
  "A small studio helping modern teams simplify messy systems, align stakeholders, and ship with confidence.";

const services = [
  { title: "Strategy", desc: "Problem framing, roadmaps, decision support." },
  { title: "Design", desc: "UX, UI, content structure, systems thinking." },
  { title: "Operations", desc: "Workflows, templates, tooling, enablement." },
];

const links = [
  { label: "About", href: "/about" },
  { label: "Services", href: "/services" },
  { label: "Contact", href: "/contact" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brand}</title>
    <meta
      name="description"
      content="Ramble & Co. — a small studio offering strategy, design, and operational clarity for modern teams."
    />
  </head>

  <body>
    <main class="wrap">
      <header class="nav">
        <a class="logo" href="/">{brand}</a>
        <nav class="links">
          {links.map((l) => (
            <a href={l.href}>{l.label}</a>
          ))}
        </nav>
      </header>

      <section class="hero">
        <p class="kicker">Consulting + Creative Studio</p>
        <h1>{tagline}</h1>
        <p class="subhead">{subhead}</p>

        <div class="cta">
          <a class="button primary" href="/contact">Start a project</a>
          <a class="button ghost" href="/services">View services</a>
        </div>
      </section>

      <section class="grid" aria-label="Services overview">
        {services.map((s) => (
          <article class="card">
            <h2>{s.title}</h2>
            <p>{s.desc}</p>
          </article>
        ))}
      </section>

      <footer class="footer">
        <p>© {new Date().getFullYear()} {brand}</p>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    background: #0b0b0d;
    color: rgba(255, 255, 255, 0.92);
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial;
  }

  .wrap {
    max-width: 980px;
    margin: 0 auto;
    padding: 28px 20px 64px;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 16px;
    padding: 10px 0 26px;
  }

  .logo {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.92);
    font-weight: 650;
    letter-spacing: 0.2px;
  }

  .links {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .links a {
    color: rgba(255, 255, 255, 0.70);
    text-decoration: none;
    font-size: 14px;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
  }

  .links a:hover {
    color: rgba(255, 255, 255, 0.92);
    border-bottom-color: rgba(255, 255, 255, 0.25);
  }

  .hero {
    padding: 46px 0 26px;
    border-top: 1px solid rgba(255, 255, 255, 0.10);
  }

  .kicker {
    margin: 0 0 14px;
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.62);
  }

  h1 {
    margin: 0 0 12px;
    font-size: clamp(34px, 5vw, 56px);
    line-height: 1.02;
    letter-spacing: -0.03em;
  }

  .subhead {
    max-width: 720px;
    margin: 0 0 22px;
    font-size: 18px;
    line-height: 1.65;
    color: rgba(255, 255, 255, 0.72);
  }

  .cta {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 11px 14px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.14);
  }

  .primary {
    background: rgba(255, 255, 255, 0.92);
    color: #0b0b0d;
  }

  .ghost {
    background: transparent;
    color: rgba(255, 255, 255, 0.84);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 18px;
    padding-top: 18px;
    border-top: 1px solid rgba(255, 255, 255, 0.10);
    margin-top: 18px;
  }

  .card {
    padding-top: 14px;
  }

  .card h2 {
    margin: 0 0 6px;
    font-size: 15px;
    font-weight: 650;
    letter-spacing: -0.01em;
  }

  .card p {
    margin: 0;
    color: rgba(255, 255, 255, 0.66);
    line-height: 1.55;
    font-size: 14px;
  }

  .footer {
    margin-top: 52px;
    padding-top: 18px;
    border-top: 1px solid rgba(255, 255, 255, 0.10);
    color: rgba(255, 255, 255, 0.56);
    font-size: 13px;
  }

  @media (max-width: 860px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
