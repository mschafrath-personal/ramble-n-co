---
import Layout from "../layouts/Layout.astro";

const brand = "Ramble & Co.";
const email = "hello@ramble-n.co";
---

<Layout title={`Contact — ${brand}`} brand={brand}>
  <section class="section content">
    <h1>Contact</h1>

    <p class="lede">
      If you’d like to collaborate, send a note with a little context about
      your project, timeline, and what “success” looks like.
    </p>

    <div class="card">
      <p class="label">Email</p>

      <p class="big">
        <a class="email" href={`mailto:${email}`}>{email}</a>
      </p>

      <p class="small">Typical reply window: 1–2 business days.</p>
    </div>
  </section>
</Layout>

<style>
  .content {
    max-width: 760px;
  }

  .lede {
    margin: 0 0 22px;
    font-size: 16px;
    line-height: 1.75;
    color: rgba(205, 117, 9, 1);
  }

  .card {
    max-width: 560px;
    padding-top: 24px;
  }

  .label {
    margin: 0 0 6px;
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(188, 105, 8, 1);
  }

  .big {
    margin: 0 0 6px;
    font-size: 22px;
    letter-spacing: -0.02em;
  }

  .email {
    color: #007D6A;
    text-decoration: none;
    border-bottom: 1px solid rgba(0, 125, 106, 1);
    padding-bottom: 2px;
  }

  .email:hover {
    border-bottom-color: #025347;
  }

  .small {
    margin: 0;
    font-size: 13px;
    color: rgba(205, 117, 9, 1);
  }
</style>
