---
const brand = "Ramble & Co.";
const email = "hello@ramble-n.co";
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact — {brand}</title>
  </head>

  <body>
    <main class="wrap">
      <header class="nav">
        <a class="logo" href={base}>{brand}</a>

        <nav class="links">
          <a href={`${base}about`}>About</a>
          <a href={`${base}services`}>Services</a>
          <a href={`${base}contact`}>Contact</a>
        </nav>
      </header>

      <section class="content">
        <h1>Contact</h1>

        <p class="lede">
          If you’d like to collaborate, send a note with a little context about
          your project, timeline, and what “success” looks like.
        </p>

        <div class="card">
          <p class="label">Email</p>
          <p class="big">
            <a class="email" href={`mailto:${email}`}>{email}</a>
          </p>
          <p class="small">Typical reply window: 1–2 business days.</p>
        </div>
      </section>

      <footer class="footer">
        <p>© {new Date().getFullYear()} {brand}</p>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body){margin:0;background:#0b0b0d;color:rgba(255,255,255,.92);font-family:ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Helvetica,Arial}
  .wrap{max-width:980px;margin:0 auto;padding:28px 20px 64px}
  .nav{display:flex;justify-content:space-between;align-items:baseline;gap:16px;padding:10px 0 26px}
  .logo{text-decoration:none;color:rgba(255,255,255,.92);font-weight:650}
  .links{display:flex;gap:16px;flex-wrap:wrap}
  .links a{color:rgba(255,255,255,.70);text-decoration:none;font-size:14px;padding-bottom:2px;border-bottom:1px solid transparent}
  .links a:hover{color:rgba(255,255,255,.92);border-bottom-color:rgba(255,255,255,.25)}
  .content{padding:46px 0 26px;border-top:1px solid rgba(255,255,255,.10)}
  h1{margin:0 0 12px;font-size:40px;letter-spacing:-.03em}
  .lede{max-width:760px;line-height:1.75;color:rgba(255,255,255,.72);font-size:16px;margin:0 0 22px}
  .card{max-width:560px;padding:18px 0;border-top:1px solid rgba(255,255,255,.10)}
  .label{margin:0 0 6px;color:rgba(255,255,255,.60);font-size:12px;letter-spacing:.14em;text-transform:uppercase}
  .big{margin:0 0 6px;font-size:22px;letter-spacing:-.02em}
  .email{color:rgba(255,255,255,.92);text-decoration:none;border-bottom:1px solid rgba(255,255,255,.25);padding-bottom:2px}
  .email:hover{border-bottom-color:rgba(255,255,255,.55)}
  .small{margin:0;color:rgba(255,255,255,.60);font-size:13px}
  .footer{margin-top:52px;padding-top:18px;border-top:1px solid rgba(255,255,255,.10);color:rgba(255,255,255,.56);font-size:13px}
</style>
