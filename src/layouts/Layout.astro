---
/*
  Base-aware layout for GitHub Pages
  Safe to use locally AND on /ramble-n-co/
*/
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Favicons (base-aware for GitHub Pages) -->
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}favicon.svg`}
    />
    <link
      rel="icon"
      href={`${import.meta.env.BASE_URL}favicon.ico`}
    />

    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>

  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
